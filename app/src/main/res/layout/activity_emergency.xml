<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bec.hamilton.EmergencyActivity"
    android:background="#ff18adab">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/logo_2"
        android:layout_centerHorizontal="true"
        android:padding="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Emergency Help"
        android:id="@+id/emerencyButton"
        android:background="#ffff4e30"
        android:padding="10dp"
        android:textColor="#ffffffff"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/helpText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpText"
        android:background="#ffffffff"
        android:hint="OPTIONAL: Tell us what&apos;s wrong."
        android:padding="10dp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/emerencyButton"
        android:layout_alignStart="@+id/emerencyButton"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/emerencyButton"
        android:layout_alignEnd="@+id/emerencyButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency? Get help now."
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/helpText"
        android:layout_alignStart="@+id/helpText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/confirmation"
        android:background="#7dffffff"
        android:hint="Request confirmation and response will appear here."
        android:padding="20dp"
        android:gravity="center"
        android:layout_below="@+id/emerencyButton"
        android:layout_alignLeft="@+id/emerencyButton"
        android:layout_alignStart="@+id/emerencyButton"
        android:layout_alignRight="@+id/emerencyButton"
        android:layout_alignEnd="@+id/emerencyButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medial Provider? Click here."
        android:id="@+id/subscribe"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff85877c"
        android:textColor="#ffffffff"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you are a medical provider, subscribe to receive texts from people in need of help."
        android:gravity="center"
        android:id="@+id/textView5"
        android:layout_alignLeft="@+id/confirmation"
        android:layout_alignStart="@+id/confirmation"
        android:layout_alignRight="@+id/confirmation"
        android:layout_alignEnd="@+id/confirmation"
        android:layout_above="@+id/subscribe"
        android:textColor="#ffffffff" />

</RelativeLayout>
