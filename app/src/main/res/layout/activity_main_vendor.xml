<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bec.hamilton.MainVendorActivity"
    android:background="#ff18adab">>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo_3"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moneyImage"
        android:background="@drawable/money"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See orders"
        android:id="@+id/foodButton"
        android:layout_toRightOf="@+id/moneyImage"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/moneyImage"
        android:backgroundTint="#ff85877c"
        android:clickable="true"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/moneyImage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emergencyImage"
        android:background="@drawable/caution"
        android:layout_alignTop="@+id/emergencyButton"
        android:layout_alignLeft="@+id/moneyImage"
        android:layout_alignStart="@+id/moneyImage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respond to emergency calls"
        android:id="@+id/emergencyButton"
        android:background="#ff85877c"
        android:textColor="#ffffffff"
        android:layout_marginTop="39dp"
        android:padding="20dp"
        android:layout_below="@+id/foodButton"
        android:layout_alignLeft="@+id/foodButton"
        android:layout_alignStart="@+id/foodButton"
        android:layout_alignRight="@+id/foodButton"
        android:layout_alignEnd="@+id/foodButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FOR VENDORS "
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>
